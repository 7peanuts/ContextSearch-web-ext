{
	"manifest_version": 2,
	"name": "ContextSearch web-ext",
	"description": "Load your current search engines into a context menu for easily searching selected text. FF 57+ compatible. Written as a simple replacement for Ben Basson's Context Search",
	"version": "1.4.6",
	"homepage_url": "https://github.com/ssborbis/ContextSearch-web-ext",
	
	"applications": {
		"gecko": {
			"id": "{5dd73bb9-e728-4d1e-990b-c77d8e03670f}",
			"strict_min_version": "57.0"
		}
	},
	
	"background": {
		"scripts": [
			"opensearch.js",
			"lib/encoding-indexes.js",
			"lib/encoding.js",
			"defaultEngines.js",
			"bookmarks.js",
			"background.js",
			"searchEngineUtils.js",
			"mozlz4.js",
			"native.js"
		]
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true,
		"open_in_tab": true
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["inject.js","quickmenu.js","opensearch.js","inject_customSearch.js"],
			"css": ["inject.css"],
			"all_frames": true,
			"match_about_blank": true
		}
	],
	
	"permissions": [
		"<all_urls>",
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"nativeMessaging"
	],
	
	"optional_permissions": [
		"bookmarks"
	],
	
	"icons": {
		"48": "icons/icon48.png",
		"96": "icons/icon96.png"
	},
	
	"web_accessible_resources": [
		"icons/icon48.png",
		"icons/spinner.svg",
		"icons/clipboard.png",
		"icons/link.png",
		"icons/close.png",
		"icons/power.png",
		"icons/lock.png",
		"icons/yes.png",
		"icons/no.png",
		"icons/add.png",
		"icons/search.png",
		"icons/edit.png",
		"icons/crossmark.png",
		"icons/checkmark.png"
	],
	
	"browser_action": {
		"default_title": "ContextSearch Options",
		"default_icon": "icons/icon48.png"
	}
}
