{
	"manifest_version": 2,
	"name": "ContextSearch web-ext",
	"description": "__MSG_extensionDescription__",
	"version": "1.6.4",
	"homepage_url": "https://github.com/ssborbis/ContextSearch-web-ext",
	"default_locale": "en",
	
	"applications": {
		"gecko": {
			"id": "{5dd73bb9-e728-4d1e-990b-c77d8e03670f}",
			"strict_min_version": "57.0"
		}
	},

	"background": {
		"scripts": [
			"lib/browser-polyfill.min.js",
			"opensearch.js",
			"lib/encoding-indexes.js",
			"lib/encoding.js",
			"defaultEngines.js",
			"bookmarks.js",
			"background.js",
			"searchEngineUtils.js",
			"mozlz4.js",
			"native.js"
		]
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["lib/browser-polyfill.min.js","inject.js","quickmenu.js","opensearch.js","searchEngineUtils.js","inject_customSearch.js"],
			"css": ["inject.css"],
			"all_frames": true,
			"match_about_blank": true
		}
	],
	
	"permissions": [
		"<all_urls>",
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"nativeMessaging"
	],
	
	"optional_permissions": [
		"bookmarks"
	],
	
	"icons": {
		"48": "icons/icon48.png"
	},
	
	"web_accessible_resources": [
		"quickmenu.html",
		"customSearch.html"
	],

	"browser_action": {
		"default_title": "ContextSearch",
		"default_icon": "icons/icon48.png"
	},
	
	"page_action": {
		"default_icon": "icons/search.png",
		"browser_style": true
	}
}

