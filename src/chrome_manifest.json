{
	"manifest_version": 2,
	"name": "ContextSearch web-ext",
	"description": "__MSG_extensionDescription__",
	"version": "1.16",
	"homepage_url": "https://github.com/ssborbis/ContextSearch-web-ext",
	"default_locale": "en",
	"background": {
		"scripts": [
			"lib/browser-polyfill.min.js",
			"lib/crossbrowser.js",
			"opensearch.js",
			"lib/encoding-indexes.js",
			"lib/encoding.js",
			"defaultEngines.js",
			"bookmarks.js",
			"background.js",
			"searchEngineUtils.js",
			"mozlz4.js",
			"keyTable.js",
			"nodes.js"
		]
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"lib/browser-polyfill.min.js",
				"lib/crossbrowser.js",
				"lib/mark.es6.min.js",
				"dock.js",
				"inject.js",
				"opensearch.js",
				"searchEngineUtils.js",
				"inject_quickmenu.js",
				"inject_customSearch.js",
				"inject_sidebar.js",
				"inject_highlight.js",
				"hotkeys.js"
			],
			"css": [
				"inject.css",
				"inject_sidebar.css"
			],
			"all_frames": true,
			"match_about_blank": false
		}
	],
	"permissions": [
		"<all_urls>",
		"activeTab",
		"contextMenus",
		"storage",
		"tabs"
	],
	"optional_permissions": [
		"bookmarks"
	],
	"icons": {
		"48": "icons/icon48-2.png"
	},
	"web_accessible_resources": [
		"/quickmenu.html",
		"/customSearch.html",
		"/searchbar.html",
		"/findbar.html",
		"icons/search.svg",
		"icons/crossmark.svg",
		"icons/vertical.svg",
		"icons/alert.png"
	],
	"browser_action": {
		"default_title": "ContextSearch",
		"default_icon": "icons/icon48.png"
	}
}
