{
	"manifest_version": 2,
	"name": "ContextSearch web-ext",
	"description": "__MSG_extensionDescription__",
	"version": "1.30",
	"homepage_url": "https://github.com/ssborbis/ContextSearch-web-ext",
	"default_locale": "en",
	
	"applications": {
		"gecko": {
			"id": "{5dd73bb9-e728-4d1e-990b-c77d8e03670f}",
			"strict_min_version": "56.0"
		}
	},

	"background": {
		"scripts": [
			"lib/browser-polyfill.min.js",
			"lib/crossbrowser.js",
			"opensearch.js",
			"lib/encoding-indexes.js",
			"lib/encoding.js",
			"defaultEngines.js",
			"bookmarks.js",
			"defaultUserOptions.js",
			"background.js",
			"omnibox.js",
			"searchEngineUtils.js",
			"mozlz4.js",
			"keyTable.js",
			"nodes.js",
			"utils.js"
		]
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
		
	"permissions": [
		"<all_urls>",
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"search"
	],
	
	"optional_permissions": [
		"bookmarks",
		"clipboardWrite",
		"clipboardRead"
	],
	
	"icons": {
		"48": "icons/logo.svg"
	},
	
	"web_accessible_resources": [
		"/quickmenu.html",
		"/customSearch.html",
		"/searchbar.html",
		"/findbar.html",
		"icons/search.svg",
		"icons/crossmark.svg",
		"icons/alert.svg",
		"icons/spinner.svg",
		"icons/code.svg",
		"/pagetiles.html"
	],

	"browser_action": {
		"default_title": "ContextSearch",
		"default_icon": "icons/logo.svg",
		"default_popup": "searchbar.html"
	},
	
	"sidebar_action": {
		"default_icon": {
			"48": "icons/logo.svg"
		},
		"default_title": "ContextSearch web-ext",
		"default_panel": "blank.html",
		"open_at_install": false
	},
	
	"commands": {
		"_execute_browser_action": {}
	},
	
	"omnibox": {
		"keyword": "cs"
	}
}
